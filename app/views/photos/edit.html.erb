<%# 後でnewと共通部分を部分テンプレートとする %>

<%= form_with model: @photo, local: true do |f| %>

  <%= render "shared/error_messages", model: f.object %>

  <%= f.file_field :image, id:"photo-image" %>
  <%= f.text_area :caption, class:"photo-caption", id:"photo-info", placeholder:"キャプションを書く" ,rows:"7" ,maxlength:"1000" %>
  <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"", id:""}) %>
  <%= f.submit "完了", class: ""%>

  <%= link_to '戻る', root_path %>

<% end %>