<div>
  <%= link_to @photo.user.nickname, user_path(@photo.user.id) %>
</div>

<div>
  <%= image_tag @photo.image.variant(resize:"x640") %>
  <%= @photo.caption %>
  <%= @photo.category.name %>

  <%= link_to '戻る', root_path %>
</div>

<div>
  <% if user_signed_in? && current_user.id == @photo.user.id %>
    <%= link_to "編集", edit_photo_path %>
    <%= link_to "削除", photo_path(@photo.id), method: :delete, data: {confirm: "本当に削除しますか？"}  %>
  <% end %>
</div>

<div>
  <% if user_signed_in? %>
    <%= form_with(model: [@photo, @comment], local: true) do |f| %>
    <%= f.text_area :text %>
    <%= f.submit "投稿する" %>
    <% end %>
  <% else %>
    <P>
      ログインすると「いいね！」やコメントができます。
    </P>
  <% end %>

</div>

<div>
  <% if @comments %>
    <% @comments.each do |comment| %>
      <p>
        <%= link_to comment.user.nickname, "#" %>
        <%= comment.text %>
      </p>
    <% end %>
  <% end %>
</div>