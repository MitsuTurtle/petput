<%# registration.cssのクラス名を流用 %>
<%# そのため、クラス名がregistration-となって違和感あるところがありますが実装状は問題ありません %>

<div class="registration-page">
  <div class="registration-form-wrap">

    <%= link_to image_tag("petput-logo.png", class:"registration-petput-icon"), "/" %>

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="field">
        <%# <%= f.label :email %>
        <%# <br /> %>
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", autocomplete: "email", class: "field-box" %>
      </div>

      <div class="field">
        <%# <%= f.label :password %>
        <%# <br /> %>
        <%= f.password_field :password, placeholder: "パスワード（英数字混合6文字以上）", autocomplete: "current-password", class: "field-box" %>
      </div>
<%
=begin
%>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

<%
=end
%>

      <div class="actions">
        <%= f.submit "ログイン", class: "signup-button" %>
      </div>
    <% end %>

    <p class="or">または</p>

    <br>
    <%= link_to 'Facenoteでログイン', "#", class: 'facebook-link' %>
    <div>
      <%= link_to "パスワードを忘れた場合", "#", class: "forget-pass" %>
      <%# <%= link_to "パスワードを忘れた場合", new_password_path(resource_name) %>
      <%# <br /> %>
    </div>

  </div>
  <div class="login-link-wrap">
  <%# <%= render "devise/shared/links" %>
  <p class="registraion-question">アカウントをお持ちでないですか？</p>
  <%= link_to "登録する", new_registration_path(resource_name), class: "login-link" %>
  </div>
</div>

