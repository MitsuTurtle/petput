<h3 class="text-center">通知</h3>

<%= link_to notification_path(current_user.id), method: :delete, data: {confirm:'本当に削除しますか？'} do %>
  <p>全削除</p>
<% end %>

<hr>
<% if @notifications.exists? %>
  <div class="users-index">
      <%= render partial: 'shared/notification', collection: @notifications %>
  </div>
<% else %>
  <p>通知はありません</p>
<% end %>